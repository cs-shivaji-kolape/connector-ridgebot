{
  "name": "ridgebot",
  "label": "RidgeBot",
  "description": "RidgeBot",
  "publisher": "Ridge Security",
  "cs_approved": true,
  "cs_compatible": true,
  "version": "1.0.0",
  "category": "Penetration Testing",
  "help_online": "https://ridgesecurity.ai/resources/",
  "configuration": {
      "fields": [
          {
              "title": "Server URL",
              "name": "server_url",
              "required": true,
              "editable": true,
              "visible": true,
              "type": "text"
          },
          {
              "title": "User Token",
              "name": "user_token",
              "required": true,
              "editable": true,
              "visible": true,
              "type": "password"
          }
      ]
  },
  "operations": [
      {
          "operation": "get_task_info",
          "title": "get_task_info",
          "description": "Get Task Info List for Single Task",
          "enabled": true,
          "parameters": [
              {
                  "title": "Task ID",
                  "required": true,
                  "visible": true,
                  "editable": true,
                  "type": "text",
                  "name": "task_id"
              }
          ]
      },
      {
          "operation": "get_task_statistics",
          "title": "get_task_statistics",
          "description": "Get Task Result with Attack Surface, Vulnerability and Risk Statistics",
          "enabled": true,
          "parameters": [
              {
                  "title": "Task ID",
                  "required": true,
                  "visible": true,
                  "editable": true,
                  "type": "text",
                  "name": "task_id"
              }
          ]
      },
      {
          "operation": "generate_and_download",
          "title": "generate_and_download",
          "description": "Generate and Download Report with Task ID",
          "enabled": true,
          "parameters": [
              {
                  "title": "Task ID",
                  "required": true,
                  "visible": true,
                  "editable": true,
                  "type": "text",
                  "name": "task_id"
              }
          ]
      },
      {
          "operation": "stop_task",
          "title": "stop_task",
          "description": "Stop an unfinished task",
          "enabled": true,
          "parameters": [
              {
                  "title": "Task ID",
                  "required": true,
                  "visible": true,
                  "editable": true,
                  "type": "text",
                  "name": "task_id"
              }
          ]
      },
      {
          "operation": "create_task",
          "title": "create_task",
          "description": "Create and run a task",
          "enabled": true,
          "parameters": [
              {
                  "title": "Name of Scan",
                  "required": true,
                  "visible": true,
                  "editable": true,
                  "type": "text",
                  "name": "name"
              },
              {
                  "title": "Type of Scan",
                  "required": true,
                  "visible": true,
                  "editable": true,
                  "type": "select",
                  "name": "temp_id",
                  "options": [
                      "Intranet",
                      "Website"
                  ]
              },
              {
                  "title": "Targets",
                  "required": true,
                  "visible": true,
                  "editable": true,
                  "type": "text",
                  "name": "targets"
              }
          ]
      }
  ]
}